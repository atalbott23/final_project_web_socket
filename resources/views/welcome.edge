  <title>Chat</title>
</head>
<body>
  <div class="container">
  <div class="container">
  <div class="row">
    <div class="col-2">
      <ul class="nav flex-column">
          <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/">About Us</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/pantry">My Pantry</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/">My Goals</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/">My Journal</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/recipe">My Recipes</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/profile">Profile</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/admin/settings">Settings</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/logout">Log Out</a>
          </li>
        </ul>
    </div> 
    <div class="d-flex justify-content-between mt-3 col-10">
      <div>
        Total Users:
        <span id="total-users"></span>
        <ul class="mt-3 ml-4" id="messages"></ul>
      </div>
      <div>
          <button type="button" class="btn btn-danger d-none" id="leave-button">Leave</button>
          <input type="text" class="chat-code" id="chat-code" placeholder="Enter in chat code" >
          <button type="button" class="btn btn-success" id="connect-button">Join</button>
        </div>
        <ul id="joined-users"></ul>
    </div>
  </div>
</div>

<div class="container fixed-bottom mt-4">
  <div class="row">
    <div class="col-2">
      <div class="mt-2">
        <span id="joined-as">Username</span>
       </div>
    </div>
    <div class="col-10">
        <form>
          <div class="form-group">
            <input type="text" class="form-control" id="user-input" placeholder="Send a message" autocomplete="off">
          </div>
        </form>
    </div> 
  </div>
</div>


